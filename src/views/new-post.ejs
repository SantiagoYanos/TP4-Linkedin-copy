<%- include('templates/header', {title: "New-Post"}); %>

<link rel="stylesheet" href="../css/new-post.css">

</head>
<body>

  <div style="width: 50px; height: 50px;"></div>

<div class="container border border-primary border-5 register-container mx-auto text-center">
    <p class="mt-3 mb-3 h5 register-sign rounded pb-2 pt-2 border border-primary border-2">New-Post</p>

    <div>
        <form action="/new-post" method="post">
            <div class="mb-2">
                <label for="photo" class="form-label">Photo:</label>
                <input type="url" class="form-control" id="multimedia" placeholder="Enter photo URL (.jpg , .png)" name="multimedia">

                <label for="description" class="form-label mt-2">Descripcion:</label>
                <textarea rows="3" id="description" class="container-fluid mb-1 mt-1" name="body" placeholder="Description..."></textarea>
            </div>
    
          <button type="submit" class="btn btn-primary mt-3 mb-2">Upload Post</button>
    
        </form>
    </div>

    <div class="post-item">

        <div class="post-user h5 mt-3">

            <img class="rounded-circle img-user-post border" src="https://discountdoorhardware.ca/wp-content/uploads/2018/06/profile-placeholder-3.jpg">

            <b>Usuario</b>

        </div>

        <img class="post-photo mt-3 mb-3" id="post-show-photo" src="">

        <p id="post-show-description">Esta es una descripción del post en cuestión.</p>
       

    </div>

    <div>

    </div>
    
</div>

<script src="../js/new-post.js"></script>
</body>
</html>